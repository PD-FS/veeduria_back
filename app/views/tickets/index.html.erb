<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ticket number</th>
      <th>Complaint photo</th>
      <th>Complaint</th>
      <th>Date time created</th>
      <th>Reliability score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.user_id %></td>
        <td><%= ticket.ticket_number %></td>
        <td><%= ticket.complaint_photo %></td>
        <td><%= ticket.complaint %></td>
        <td><%= ticket.date_time_created %></td>
        <td><%= ticket.reliability_score %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
